                                        <core:Icon id="_IDGenIcon2" src="sap-icon://information" class="size1" color="#031E48" />
                                        <Text id="_IDGenText18" class="hbox_text" text="Superficie : {= parseInt(${Superficie})} m²" />
                                    </HBox>
